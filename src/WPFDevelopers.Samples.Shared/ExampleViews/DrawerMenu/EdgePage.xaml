<Page
    x:Class="WPFDevelopers.Samples.ExampleViews.DrawerMenu.EdgePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFDevelopers.Samples.ExampleViews.DrawerMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EdgePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource WD.PrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="0,0,0,40" VerticalAlignment="Center">
            <Image
                Width="50"
                Source="pack://application:,,,/WPFDevelopers.Samples;component/Resources/Images/CircularMenu/4.png"
                Stretch="Uniform" />
            <TextBlock
                Padding="0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="{StaticResource WD.TitleFontSize}"
                Foreground="White"
                Text="即将跳转至Edge浏览器"
                TextAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>
