<local:WindowBase
    x:Class="WPFDevelopers.Samples.ExampleViews.LoginWindowExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:WPFDevelopers.Samples.ExampleViews.LoginWindow.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFDevelopers.Samples.ExampleViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="登录"
    Width="360"
    Height="372"
    FontFamily="NSimSun"
    FontSize="13px"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    Style="{StaticResource NormalWindow}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="40,40,40,0" VerticalAlignment="Top">
            <!--  邮箱输入框  -->
            <cc:TextInputBox
                Height="40"
                Icon="Mail.png"
                PlaceHolder="邮箱" />
            <!--  密码输入框  -->
            <cc:PasswordInputBox
                Height="40"
                Margin="0,20,0,0"
                Icon="Lock.png"
                PlaceHolder="密码" />
            <!--  登录按钮  -->
            <Button
                x:Name="LoginButton"
                Height="40"
                Margin="0,20,0,0"
                Content="登录"
                Style="{StaticResource LoginButtonStyle}" />
            <!--  可点击文本  -->
            <Grid Margin="0,20,0,0">
                <TextBlock FontSize="12">
                    <Hyperlink Foreground="#A1A1A1" TextDecorations="None">忘记密码</Hyperlink>
                </TextBlock>
                <TextBlock
                    Margin="0,0,-1,0"
                    HorizontalAlignment="Right"
                    FontSize="12">
                    <Hyperlink
                        Click="SignUp_Click"
                        Foreground="#4370F5"
                        TextDecorations="None">
                        注册账号
                    </Hyperlink>
                </TextBlock>
            </Grid>
        </StackPanel>
    </Grid>
</local:WindowBase>
