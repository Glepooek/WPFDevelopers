<UserControl
    x:Class="WPFDevelopers.Samples.ExampleViews.NavScrollPanelExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WPFDevelopers.Samples.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFDevelopers.Samples.ExampleViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wd="https://github.com/WPFDevelopersOrg/WPFDevelopers"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <controls:CodeViewer Header="{Binding NavigateMenuItem.Name}">
        <TabControl TabStripPlacement="Bottom">
            <TabItem Header="Xaml">
                <wd:NavScrollPanel wd:ElementHelper.CornerRadius="10">
                    <wd:NavScrollPanelItem Header="播放相关">
                        <local:PlaybackSettings />
                    </wd:NavScrollPanelItem>
                    <wd:NavScrollPanelItem Header="桌面歌词">
                        <local:DesktopLyrics />
                    </wd:NavScrollPanelItem>
                    <wd:NavScrollPanelItem Header="快捷键">
                        <local:ShortcutKeys />
                    </wd:NavScrollPanelItem>
                    <wd:NavScrollPanelItem Header="隐私设置">
                        <local:PrivacySettings />
                    </wd:NavScrollPanelItem>
                    <wd:NavScrollPanelItem Header="关于我们">
                        <local:About />
                    </wd:NavScrollPanelItem>
                </wd:NavScrollPanel>
            </TabItem>
            <TabItem Header="Binding">
                <wd:NavScrollPanel
                    Padding="10"
                    wd:ElementHelper.CornerRadius="10"
                    ItemsSource="{Binding Items}" />
            </TabItem>
        </TabControl>
        <controls:CodeViewer.SourceCodes>
            <controls:SourceCodeModel CodeSource="/WPFDevelopers.SamplesCode;component/ExampleViews/NavScrollPanelExample.xaml" CodeType="Xaml" />
            <controls:SourceCodeModel CodeSource="/WPFDevelopers.SamplesCode;component/ExampleViews/NavScrollPanelExample.xaml.cs" CodeType="CSharp" />
        </controls:CodeViewer.SourceCodes>
    </controls:CodeViewer>
</UserControl>
