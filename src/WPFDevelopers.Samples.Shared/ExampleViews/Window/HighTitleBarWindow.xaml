<wd:Window
    x:Class="WPFDevelopers.Samples.ExampleViews.HighTitleBarWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WPFDevelopers.Samples.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wd="https://github.com/WPFDevelopersOrg/WPFDevelopers"
    Title="HighTitleBar"
    Width="710"
    Height="520"
    BorderBrush="{DynamicResource WD.DangerPressedSolidColorBrush}"
    Icon="pack://application:,,,/WPFDevelopers.Samples;component/WPFDevelopers.ico"
    TitleBackground="{DynamicResource WD.DangerPressedSolidColorBrush}"
    TitleBarMode="HighTitleBar"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <controls:CodeViewer>
        <Grid>
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Content" />
        </Grid>
        <controls:CodeViewer.SourceCodes>
            <controls:SourceCodeModel CodeSource="/WPFDevelopers.SamplesCode;component/ExampleViews/Window/HighTitleBarWindow.xaml" CodeType="Xaml" />
            <controls:SourceCodeModel CodeSource="/WPFDevelopers.SamplesCode;component/ExampleViews/Window/HighTitleBarWindow.xaml.cs" CodeType="CSharp" />
        </controls:CodeViewer.SourceCodes>
    </controls:CodeViewer>
</wd:Window>
